<Page
    x:Class="ColorPicker.Pages.AiGenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ColorPicker.Properties"
    xmlns:local="clr-namespace:ColorPicker.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AiGenPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="16"
                Foreground="{DynamicResource AccentColor}"
                Text="&#xF4DB;" />
            <TextBlock
                x:Name="TitleTxt"
                Margin="5 0 0 0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="ExtraBold"
                Text="{x:Static lang:Resources.AIGeneration}" />
        </StackPanel>

        <Grid
            x:Name="NavGrid"
            Grid.Row="1"
            Margin="10"
            Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <RadioButton
                x:Name="ColorBtn"
                Margin="0 2"
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Checked="ColorBtn_Checked"
                Foreground="{DynamicResource AccentColor}"
                GroupName="Toggle"
                Style="{DynamicResource DefaultToggleButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="/Fonts/#FluentSystemIcons-Regular"
                        FontSize="14"
                        Text="&#xF596;" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="11"
                        FontWeight="ExtraBold"
                        Text="{x:Static lang:Resources.SingleColor}" />
                </Grid>
            </RadioButton>
            <RadioButton
                x:Name="PaletteBtn"
                Grid.Column="1"
                Margin="10 2 0 2"
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Checked="PaletteBtn_Checked"
                Foreground="{DynamicResource AccentColor}"
                GroupName="Toggle"
                Style="{DynamicResource DefaultToggleButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="/Fonts/#FluentSystemIcons-Regular"
                        FontSize="14"
                        Text="&#xF2F6;" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="11"
                        FontWeight="ExtraBold"
                        Text="{x:Static lang:Resources.Palettes}" />
                </Grid>
            </RadioButton>
            <RadioButton
                x:Name="DescribeBtn"
                Grid.Column="2"
                Margin="10 2 0 2"
                Padding="5"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Checked="DescribeBtn_Checked"
                Foreground="{DynamicResource AccentColor}"
                GroupName="Toggle"
                Style="{DynamicResource DefaultToggleButton}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="/Fonts/#FluentSystemIcons-Regular"
                        FontSize="14"
                        Text="&#xF287;" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="11"
                        FontWeight="ExtraBold"
                        Text="{x:Static lang:Resources.DescribeColor}" />
                </Grid>
            </RadioButton>
            <Button
                x:Name="BookmarkBtn"
                Grid.Column="4"
                Padding="5"
                VerticalAlignment="Top"
                Background="{DynamicResource Background3}"
                Click="BookmarkBtn_Click"
                Content="&#xF1F6;"
                FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                Foreground="{DynamicResource Foreground1}"
                Style="{DynamicResource DefaultButton}"
                Visibility="Collapsed">
                <Button.ToolTip>
                    <ToolTip
                        x:Name="BookmarkToolTip"
                        Background="{DynamicResource Background1}"
                        Content="{x:Static lang:Resources.AddBookmark}"
                        Foreground="{DynamicResource Foreground1}" />
                </Button.ToolTip>
            </Button>
        </Grid>

        <StackPanel
            x:Name="ColorPanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <Border
                x:Name="ColorBorder"
                Width="75"
                Height="75"
                Margin="10"
                VerticalAlignment="Center"
                d:Background="#ff0000"
                CornerRadius="50"
                Visibility="Collapsed" />
            <StackPanel
                x:Name="EmptyPlaceholder"
                Grid.Row="2"
                Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    FontSize="32"
                    Text="&#xF2F6;" />
                <TextBlock HorizontalAlignment="Center" Text="{x:Static lang:Resources.EmptyAiPlaceholder}" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
                    Width="250"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0"
                            Color="{DynamicResource Accent}" />
                    </Border.Effect>
                    <TextBox
                        x:Name="PromptTxt"
                        Margin="3"
                        Padding="3"
                        d:Text="123"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Foreground="{DynamicResource DarkGray}"
                        TextAlignment="Center" />
                </Border>
                <Button
                    x:Name="GenerateBtn"
                    Margin="5 0"
                    Padding="5 0"
                    Background="{DynamicResource AccentColor}"
                    BorderThickness="0"
                    Click="GenerateBtn_Click"
                    Content="{x:Static lang:Resources.Generate}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                    Style="{DynamicResource PrimaryButton}" />
                <Button
                    x:Name="IdeaBtn"
                    Grid.Column="2"
                    Padding="5"
                    Background="{DynamicResource Background3}"
                    Click="IdeaBtn_Click"
                    Content="&#xF4DB;"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}"
                    Style="{DynamicResource DefaultButton}">
                    <Button.ToolTip>
                        <ToolTip
                            Background="{DynamicResource Background1}"
                            Content="{x:Static lang:Resources.GetIdeas}"
                            Foreground="{DynamicResource Foreground1}" />
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel
            x:Name="PalettePanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            d:Visibility="Visible"
            Visibility="Collapsed">
            <StackPanel x:Name="EmptyPalettePlaceholder" Margin="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    FontSize="32"
                    Text="&#xF2F6;" />
                <TextBlock HorizontalAlignment="Center" Text="{x:Static lang:Resources.EmptyAiPlaceholder}" />
            </StackPanel>
            <StackPanel
                x:Name="PaletteBordersPanel"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Visibility="Collapsed">
                <Border
                    x:Name="C1"
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    d:Background="#ff0000"
                    CornerRadius="10 0 0 10"
                    Cursor="Hand"
                    MouseLeftButtonUp="C1_MouseLeftButtonUp">
                    <Border.Effect>
                        <DropShadowEffect
                            x:Name="C1Shadow"
                            d:Color="{DynamicResource Accent}"
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0" />
                    </Border.Effect>
                </Border>
                <Border
                    x:Name="C2"
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    d:Background="#0ff00f"
                    CornerRadius="0"
                    Cursor="Hand"
                    MouseLeftButtonUp="C1_MouseLeftButtonUp">
                    <Border.Effect>
                        <DropShadowEffect
                            x:Name="C2Shadow"
                            d:Color="{DynamicResource Accent}"
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0" />
                    </Border.Effect>
                </Border>
                <Border
                    x:Name="C3"
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    d:Background="#468dff"
                    CornerRadius="0"
                    Cursor="Hand"
                    MouseLeftButtonUp="C1_MouseLeftButtonUp">
                    <Border.Effect>
                        <DropShadowEffect
                            x:Name="C3Shadow"
                            d:Color="{DynamicResource Accent}"
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0" />
                    </Border.Effect>
                </Border>
                <Border
                    x:Name="C4"
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    d:Background="#454fde"
                    CornerRadius="0"
                    Cursor="Hand"
                    MouseLeftButtonUp="C1_MouseLeftButtonUp">
                    <Border.Effect>
                        <DropShadowEffect
                            x:Name="C4Shadow"
                            d:Color="{DynamicResource Accent}"
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0" />
                    </Border.Effect>
                </Border>
                <Border
                    x:Name="C5"
                    Width="50"
                    Height="50"
                    VerticalAlignment="Center"
                    d:Background="#efa512"
                    CornerRadius="0 10 10 0"
                    Cursor="Hand"
                    MouseLeftButtonUp="C1_MouseLeftButtonUp">
                    <Border.Effect>
                        <DropShadowEffect
                            x:Name="C5Shadow"
                            d:Color="{DynamicResource Accent}"
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0" />
                    </Border.Effect>
                </Border>

            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
                    Width="250"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0"
                            Color="{DynamicResource Accent}" />
                    </Border.Effect>
                    <TextBox
                        x:Name="PalettePromptTxt"
                        Margin="3"
                        Padding="3"
                        d:Text="123"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Foreground="{DynamicResource DarkGray}"
                        TextAlignment="Center" />
                </Border>
                <Button
                    x:Name="PaletteGenerateBtn"
                    Margin="5 0"
                    Padding="5 0"
                    Background="{DynamicResource AccentColor}"
                    BorderThickness="0"
                    Click="PaletteGenerateBtn_Click"
                    Content="{x:Static lang:Resources.Generate}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                    Style="{DynamicResource PrimaryButton}" />
                <Button
                    x:Name="IdeaPaletteBtn"
                    Grid.Column="2"
                    Padding="5"
                    Background="{DynamicResource Background3}"
                    Click="IdeaPaletteBtn_Click"
                    Content="&#xF4DB;"
                    FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                    Foreground="{DynamicResource Foreground1}"
                    Style="{DynamicResource DefaultButton}">
                    <Button.ToolTip>
                        <ToolTip
                            Background="{DynamicResource Background1}"
                            Content="{x:Static lang:Resources.GetIdeas}"
                            Foreground="{DynamicResource Foreground1}" />
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel
            x:Name="ApiPlaceholder"
            Grid.Row="2"
            VerticalAlignment="Center"
            d:Visibility="Collapsed">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                FontSize="32"
                Text="&#xF4DB;" />
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.NoApiKeyMsg}" />
            <StackPanel
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    Width="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0"
                            Color="{DynamicResource Accent}" />
                    </Border.Effect>
                    <PasswordBox
                        x:Name="ApiKeyTxt"
                        Margin="3"
                        Padding="3"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Foreground="{DynamicResource DarkGray}" />
                </Border>
                <Button
                    x:Name="ApiApplyBtn"
                    Margin="10 0 0 0"
                    Padding="10 5 10 5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentColor}"
                    Click="ApiApplyBtn_Click"
                    Cursor="Hand"
                    FontWeight="ExtraBold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                    Style="{StaticResource PrimaryButton}">
                    <TextBlock
                        Margin="0 0 0 0"
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontWeight="Regular"
                        Text="&#xF680;" />

                    <Button.ToolTip>
                        <ToolTip
                            Background="{DynamicResource Background1}"
                            Content="{x:Static lang:Resources.Apply}"
                            Foreground="{DynamicResource Foreground1}" />
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel
            x:Name="DetailsHeader"
            Grid.Row="3"
            Margin="10"
            Orientation="Horizontal"
            Visibility="Collapsed">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="16"
                Foreground="{DynamicResource AccentColor}"
                Text="&#xF4A4;" />
            <TextBlock
                Margin="5 0 0 0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="ExtraBold"
                Text="{x:Static lang:Resources.Details}" />
        </StackPanel>
        <StackPanel
            x:Name="DescPanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                FontSize="32"
                Text="&#xF287;" />
            <TextBlock
                Margin="0 10"
                HorizontalAlignment="Center"
                Text="{x:Static lang:Resources.EnterColor}" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
                    Width="250"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="5">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="15"
                            Opacity="0.2"
                            ShadowDepth="0"
                            Color="{DynamicResource Accent}" />
                    </Border.Effect>
                    <TextBox
                        x:Name="DescPromptTxt"
                        Margin="3"
                        Padding="3"
                        d:Text="123"
                        Background="Transparent"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Foreground="{DynamicResource DarkGray}"
                        TextAlignment="Center" />
                </Border>
                <Button
                    x:Name="DescGenerateBtn"
                    Margin="5 0"
                    Padding="5 0"
                    Background="{DynamicResource AccentColor}"
                    BorderThickness="0"
                    Click="DescGenerateBtn_Click"
                    Content="{x:Static lang:Resources.Generate}"
                    FontWeight="Bold"
                    Foreground="{DynamicResource WindowButtonsHoverForeground1}"
                    Style="{DynamicResource PrimaryButton}" />
            </StackPanel>
            <TextBlock
                x:Name="NameTxt"
                Margin="0 10"
                HorizontalAlignment="Center"
                Cursor="Hand"
                FontWeight="SemiBold"
                MouseLeftButtonUp="NameTxt_MouseLeftButtonUp" />
        </StackPanel>

        <Grid
            x:Name="DetailsWrap"
            Grid.Row="4"
            Margin="0 0 0 10" />
    </Grid>
</Page>
