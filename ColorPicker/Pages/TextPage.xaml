<Page
    x:Class="ColorPicker.Pages.TextPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ColorPicker.Properties"
    xmlns:local="clr-namespace:ColorPicker.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TextPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground1}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Popup
            x:Name="ColorSelector"
            AllowsTransparency="True"
            IsOpen="False"
            Placement="Mouse"
            StaysOpen="False">
            <Border
                Grid.Row="1"
                Margin="10"
                Padding="5"
                Background="{DynamicResource CardBackground}"
                CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Opacity="0.2"
                        ShadowDepth="0"
                        Color="{DynamicResource Accent}" />
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.ColumnSpan="3"
                        Margin="2"
                        Orientation="Horizontal">
                        <Button
                            x:Name="RgbBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.RGB}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="HexBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.HEX}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="HsvBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.HSV}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="HslBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.HSL}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="CmykBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.CMYK}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="DecBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.DEC}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="XyzBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.XYZ}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="YiqBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.YIQ}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                        <Button
                            x:Name="YuvBtn"
                            Margin="4 2"
                            Padding="5"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RgbBtn_Click"
                            Content="{x:Static lang:Resources.YUV}"
                            FontWeight="ExtraBold"
                            Foreground="{DynamicResource AccentColor}"
                            Style="{DynamicResource DefaultButton}" />
                    </StackPanel>

                    <Border
                        x:Name="ColorBorder"
                        Grid.Row="1"
                        Width="25"
                        Height="25"
                        Margin="5"
                        VerticalAlignment="Center"
                        d:Background="#ff0000"
                        CornerRadius="50"
                        Cursor="Hand"
                        MouseLeftButtonUp="ColorBorder_MouseLeftButtonUp" />
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="DisplayText1"
                            Margin="0 0 10 0"
                            VerticalAlignment="Center"
                            FontWeight="ExtraBold"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="B1"
                            Width="50"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="5"
                            Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="0"
                                    Color="{DynamicResource Accent}" />
                            </Border.Effect>
                            <Grid>
                                <TextBox
                                    x:Name="Txt1"
                                    Margin="3"
                                    Padding="3"
                                    d:Text="123"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CommandManager.CanExecute="Txt1_CanExecute"
                                    CommandManager.PreviewExecuted="Txt1_PreviewExecuted"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource DarkGray}"
                                    TextAlignment="Center"
                                    TextChanged="Txt1_TextChanged" />
                            </Grid>
                        </Border>
                        <TextBlock
                            x:Name="DisplayText2"
                            Margin="10 0 10 0"
                            VerticalAlignment="Center"
                            FontWeight="ExtraBold"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="B2"
                            Width="50"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="5"
                            Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="0"
                                    Color="{DynamicResource Accent}" />
                            </Border.Effect>
                            <Grid>
                                <TextBox
                                    x:Name="Txt2"
                                    Margin="3"
                                    Padding="3"
                                    d:Text="123"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CommandManager.CanExecute="Txt1_CanExecute"
                                    CommandManager.PreviewExecuted="Txt1_PreviewExecuted"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource DarkGray}"
                                    TextAlignment="Center"
                                    TextChanged="Txt1_TextChanged" />
                            </Grid>
                        </Border>
                        <TextBlock
                            x:Name="DisplayText3"
                            Margin="10 0 10 0"
                            VerticalAlignment="Center"
                            FontWeight="ExtraBold"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="B3"
                            Width="50"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="5"
                            Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="0"
                                    Color="{DynamicResource Accent}" />
                            </Border.Effect>
                            <Grid>
                                <TextBox
                                    x:Name="Txt3"
                                    Margin="3"
                                    Padding="3"
                                    d:Text="123"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CommandManager.CanExecute="Txt1_CanExecute"
                                    CommandManager.PreviewExecuted="Txt1_PreviewExecuted"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource DarkGray}"
                                    TextAlignment="Center"
                                    TextChanged="Txt1_TextChanged" />
                            </Grid>
                        </Border>
                        <TextBlock
                            x:Name="DisplayText4"
                            Margin="10 0 10 0"
                            VerticalAlignment="Center"
                            FontWeight="ExtraBold"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="B4"
                            Width="50"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="5"
                            Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="0"
                                    Color="{DynamicResource Accent}" />
                            </Border.Effect>
                            <Grid>
                                <TextBox
                                    x:Name="Txt4"
                                    Margin="3"
                                    Padding="3"
                                    d:Text="123"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CommandManager.CanExecute="Txt1_CanExecute"
                                    CommandManager.PreviewExecuted="Txt1_PreviewExecuted"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource DarkGray}"
                                    TextAlignment="Center"
                                    TextChanged="Txt1_TextChanged" />
                            </Grid>
                        </Border>
                        <TextBlock
                            x:Name="DisplayText5"
                            Margin="10 0 10 0"
                            VerticalAlignment="Center"
                            FontWeight="ExtraBold"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="B5"
                            Width="100"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="5"
                            Visibility="Collapsed">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity="0.2"
                                    ShadowDepth="0"
                                    Color="{DynamicResource Accent}" />
                            </Border.Effect>
                            <Grid>
                                <TextBox
                                    x:Name="Txt5"
                                    Margin="3"
                                    Padding="3"
                                    d:Text="123"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CommandManager.CanExecute="Txt1_CanExecute"
                                    CommandManager.PreviewExecuted="Txt1_PreviewExecuted"
                                    FontWeight="Bold"
                                    Foreground="{DynamicResource DarkGray}"
                                    TextAlignment="Center"
                                    TextChanged="Txt1_TextChanged" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Button
                        x:Name="SelectColorBtn"
                        Grid.Row="3"
                        Grid.ColumnSpan="3"
                        Padding="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{DynamicResource Background3}"
                        Click="SelectColorBtn_Click"
                        Content="{x:Static lang:Resources.Apply}"
                        FontWeight="ExtraBold"
                        Foreground="{DynamicResource Foreground1}"
                        Style="{DynamicResource DefaultButton}" />

                </Grid>
            </Border>

        </Popup>

        <StackPanel
            Grid.ColumnSpan="2"
            Margin="10"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="../Fonts/#FluentSystemIcons-Regular"
                FontSize="16"
                Foreground="{DynamicResource AccentColor}"
                Text="&#xF793;" />
            <TextBlock
                x:Name="TitleTxt"
                Margin="5 0 0 0"
                VerticalAlignment="Center"
                d:Text="{x:Static lang:Resources.TextTool}"
                FontSize="14"
                FontWeight="ExtraBold" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.2"
                    ShadowDepth="0"
                    Color="{DynamicResource Accent}" />
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0 0 10 0"
                        VerticalAlignment="Center"
                        Text="{x:Static lang:Resources.Font}" />

                    <ComboBox
                        x:Name="FontComboBox"
                        MinWidth="100"
                        MaxWidth="150"
                        Margin="0"
                        Padding="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{DynamicResource AccentColor}"
                        BorderThickness="0"
                        Foreground="{DynamicResource Foreground1}"
                        IsEditable="True"
                        SelectionChanged="FontComboBox_SelectionChanged"
                        Style="{DynamicResource ComboBoxStyle1}" />

                    <TextBlock
                        Margin="10 0 10 0"
                        VerticalAlignment="Center"
                        Text="{x:Static lang:Resources.Size}" />
                    <Border
                        x:Name="B"
                        Width="50"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource CardBackground}"
                        CornerRadius="5">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Opacity="0.2"
                                ShadowDepth="0"
                                Color="{DynamicResource Accent}" />
                        </Border.Effect>
                        <TextBox
                            x:Name="FontSizeTxt"
                            Margin="3"
                            Padding="3"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Foreground="{DynamicResource DarkGray}"
                            PreviewTextInput="FontSizeTxt_PreviewTextInput"
                            Text="16"
                            TextAlignment="Center"
                            TextChanged="FontSizeTxt_TextChanged" />
                    </Border>
                    <TextBlock
                        Margin="10 0 10 0"
                        VerticalAlignment="Center"
                        Text="{x:Static lang:Resources.Foreground}" />
                    <Border
                        x:Name="ForegroundBorder"
                        Width="30"
                        Height="30"
                        Background="{DynamicResource Foreground1}"
                        BorderThickness="0"
                        CornerRadius="20"
                        Cursor="Hand"
                        MouseLeftButtonUp="ForegroundBorder_MouseLeftButtonUp"
                        MouseRightButtonUp="ForegroundBorder_MouseRightButtonUp">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Opacity="0.2"
                                ShadowDepth="0"
                                Color="{DynamicResource Accent}" />
                        </Border.Effect>
                    </Border>
                    <TextBlock
                        Margin="10 0 10 0"
                        VerticalAlignment="Center"
                        Text="{x:Static lang:Resources.Background}" />
                    <Border
                        x:Name="BackgroundBorder"
                        Width="30"
                        Height="30"
                        Background="{DynamicResource Background1}"
                        BorderThickness="0"
                        CornerRadius="20"
                        Cursor="Hand"
                        MouseLeftButtonUp="BackgroundBorder_MouseLeftButtonUp"
                        MouseRightButtonUp="ForegroundBorder_MouseRightButtonUp">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Opacity="0.2"
                                ShadowDepth="0"
                                Color="{DynamicResource Accent}" />
                        </Border.Effect>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button
                        x:Name="GenerateGradientBtn"
                        Grid.Column="2"
                        Padding="5"
                        VerticalAlignment="Center"
                        Background="{DynamicResource Background3}"
                        Click="GenerateGradientBtn_Click"
                        Content="&#xF191;"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}"
                        Style="{DynamicResource DefaultButton}">
                        <Button.ToolTip>
                            <ToolTip
                                Background="{DynamicResource Background1}"
                                Content="{x:Static lang:Resources.GenerateTextColors}"
                                Foreground="{DynamicResource Foreground1}" />
                        </Button.ToolTip>
                    </Button>
                    <Button
                        x:Name="BookmarkBtn"
                        Grid.Column="3"
                        Padding="5"
                        VerticalAlignment="Center"
                        Background="{DynamicResource Background3}"
                        Click="BookmarkBtn_Click"
                        Content="&#xF1F6;"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        Foreground="{DynamicResource Foreground1}"
                        Style="{DynamicResource DefaultButton}">
                        <Button.ToolTip>
                            <ToolTip
                                x:Name="BookmarkToolTip"
                                Background="{DynamicResource Background1}"
                                Content="{x:Static lang:Resources.AddBookmark}"
                                Foreground="{DynamicResource Foreground1}" />
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border
            x:Name="TextPanel"
            Grid.Row="2"
            Margin="10"
            Padding="10"
            Background="{DynamicResource CardBackground}"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.2"
                    ShadowDepth="0"
                    Color="{DynamicResource Accent}" />
            </Border.Effect>
            <StackPanel>
                <TextBox
                    x:Name="BoldTxt"
                    Margin="10 5"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="ExtraBold"
                    Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="ItalicTxt"
                    Margin="10 5"
                    BorderThickness="0"
                    FontSize="14"
                    FontStyle="Italic"
                    Text="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="RegularTxt"
                    Margin="10 5"
                    BorderThickness="0"
                    FontSize="14"
                    Text="Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    TextWrapping="Wrap" />
            </StackPanel>
        </Border>
        <Border
            x:Name="RatioPanel"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            VerticalAlignment="Top"
            Background="{DynamicResource CardBackground}"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.2"
                    ShadowDepth="0"
                    Color="{DynamicResource Accent}" />
            </Border.Effect>
            <StackPanel>
                <TextBlock
                    Margin="0 0 0 10"
                    FontWeight="ExtraBold"
                    Foreground="{DynamicResource DarkGray}"
                    Text="{x:Static lang:Resources.Contrast}" />

                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Width="30"
                        Height="30"
                        Background="#00ab4e"
                        CornerRadius="5 5 0 0" />
                    <Border
                        Grid.Row="1"
                        Width="30"
                        Height="30"
                        Background="#007fff" />
                    <Border
                        Grid.Row="2"
                        Width="30"
                        Height="30"
                        Background="#ff7a29" />
                    <Border
                        Grid.Row="3"
                        Width="30"
                        Height="30"
                        Background="#ff0000"
                        CornerRadius="0 0 5 5" />

                    <TextBlock
                        x:Name="IndicatorArrow"
                        Grid.Column="1"
                        Margin="5 0"
                        VerticalAlignment="Center"
                        FontFamily="..\Fonts\#FluentSystemIcons-Regular"
                        FontSize="22"
                        Text="&#xF15C;" />
                    <TextBlock
                        x:Name="ContrastTxt"
                        Grid.Row="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="4.2"
                        FontSize="14"
                        FontWeight="Bold" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
