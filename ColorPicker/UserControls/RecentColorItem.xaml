<UserControl x:Class="ColorPicker.UserControls.RecentColorItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:ColorPicker.UserControls"
			 mc:Ignorable="d" 
			 Height="50" Width="50" Margin="5">
	<Border x:Name="Border" d:Background="#fff" CornerRadius="10" Cursor="Hand" MouseLeftButtonUp="Border_MouseLeftButtonUp">
		<Border.ToolTip>
			<ToolTip x:Name="ToolTip" Background="{Binding Source={StaticResource Background1}}" Foreground="{Binding Source={StaticResource Foreground1}}"/>
		</Border.ToolTip>
	</Border>
</UserControl>
